{
  "name": "epochtalk",
  "version": "0.2.0",
  "description": "Epochtalk forum software",
  "main": "server",
  "scripts": {
    "install": "napa",
    "build": "browserify -t cssify -t brfs app/app.js -o public/bundle.js",
    "watch": "watchify -t cssify -t brfs app/app.js -o public/bundle.js -v",
    "test": "mocha -R spec ./tests",
    "start": "npm run build & node server",
    "start-dev": "nodemon server | bunyan",
    "start-devwatch": "npm run watch & nodemon server | bunyan"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/slickage/epochtalk"
  },
  "author": "James Wang <jw@slickage.com> (http://slickage.com/)",
  "license": "TBD",
  "bugs": {
    "url": "https://github.com/slickage/epochtalk/issues"
  },
  "homepage": "https://github.com/slickage/epochtalk",
  "napa": {
    "angular": "angular/bower-angular",
    "angular-cookies": "angular/bower-angular-cookies",
    "angular-resource": "angular/bower-angular-resource",
    "angular-route": "angular/bower-angular-route",
    "angular-sanitize": "angular/bower-angular-sanitize",
    "foundation": "zurb/bower-foundation"
  },
  "dependencies": {
    "async": "^0.7.0",
    "bcrypt": "^0.7.8",
    "body-parser": "^1.2.0",
    "bunyan": "^0.22.3",
    "connect-redis": "^2.0.0",
    "consolidate": "^0.10.0",
    "cookie-parser": "^1.1.0",
    "cssify": "^0.5.1",
    "express": "^4.1.2",
    "express-session": "^1.2.0",
    "hamljs": "^0.6.2",
    "lodash": "^2.4.1",
    "method-override": "^1.0.0",
    "morgan": "^1.0.1",
    "nano": "^5.7.1",
    "passport": "^0.2.0",
    "passport-local": "^1.0.0",
    "yargs": "^1.2.1"
  },
  "devDependencies": {
    "brfs": "^1.0.2",
    "charlatan": "^0.1.9",
    "couchapp": "^0.11.0",
    "cssify": "^0.5.1",
    "mocha": "^1.19.0",
    "mysql": "^2.1.1"
  }
}
