{
  "name": "epochtalk",
  "version": "0.2.0",
  "description": "Epochtalk forum software",
  "main": "server",
  "scripts": {
    "install": "./node_modules/.bin/napa && ./postInstall.sh",
    "build": "./node_modules/.bin/browserify -t cssify -t brfs -t browserify-ngmin app/app.js -o public/js/bundle.js && ./node_modules/.bin/uglifyjs 'public/js/bundle.js' -o public/js/bundle.min.js -c -m",
    "watch": "./node_modules/.bin/watchify -t cssify -t brfs app/app.js -o public/bundle.js -v",
    "test": "./node_modules/.bin/mocha -R spec ./tests",
    "start": "npm run build & node server",
    "start-dev": "./node_modules/.bin/nodemon server | ./node_modules/.bin/bunyan",
    "start-devwatch": "npm run watch & ./node_modules/.bin/nodemon server | ./node_modules/.bin/bunyan"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/epochtalk/epochtalk"
  },
  "author": "James Wang <jw@slickage.com> (http://slickage.com/)",
  "license": "TBD",
  "bugs": {
    "url": "https://github.com/slickage/epochtalk/issues"
  },
  "homepage": "https://github.com/slickage/epochtalk",
  "napa": {
    "angular": "angular/bower-angular",
    "angular-cookies": "angular/bower-angular-cookies",
    "angular-resource": "angular/bower-angular-resource",
    "angular-route": "angular/bower-angular-route",
    "angular-sanitize": "angular/bower-angular-sanitize",
    "foundation": "zurb/bower-foundation",
    "ng-breadcrumb": "ianwalter/ng-breadcrumbs"
  },
  "dependencies": {
    "async": "^0.7.0",
    "bcrypt": "^0.7.8",
    "bluebird": "^2.3.2",
    "bunyan": "^0.22.3",
    "cssify": "^0.5.1",
    "epochcore": "^0.5.3",
    "good": "^2.2.0",
    "gulp-uglifyjs": "^0.4.2",
    "hapi": "^6.2.1",
    "hapi-auth-jsonwebtoken": "^0.2.1",
    "joi": "^4.6.2",
    "jsonwebtoken": "^1.1.1",
    "levelup": "^0.19.0",
    "lodash": "^2.4.1",
    "medium-editor": "^1.8.14",
    "memdown": "^0.10.2",
    "passport": "^0.2.0",
    "passport-local": "^1.0.0",
    "qr-image": "^1.1.0",
    "speakeasy": "^1.0.3",
    "yargs": "^1.2.1"
  },
  "devDependencies": {
    "brfs": "^1.0.2",
    "browserify": "^4.1.7",
    "browserify-ngmin": "^0.1.0",
    "charlatan": "^0.1.9",
    "cssify": "^0.5.1",
    "gulp": "^3.8.8",
    "gulp-uglify": "^1.0.1",
    "mocha": "^1.19.0",
    "mysql": "^2.1.1",
    "napa": "^0.4.1",
    "nodemon": "^1.1.1",
    "uglify-js": "^2.4.14",
    "uglifyify": "^2.5.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.0.0",
    "watchify": "^0.10.2"
  }
}
